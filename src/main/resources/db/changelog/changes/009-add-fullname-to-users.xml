<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="009-1-add-fullname-column-nullable" author="minhtb">
        <addColumn tableName="users">
            <column name="fullname" type="varchar(100)" />
        </addColumn>
    </changeSet>

    <changeSet id="009-2-update-existing-null-fullnames" author="minhtb">
        <update tableName="users">
            <column name="fullname" valueComputed="email"/>
            <where>fullname IS NULL</where>
        </update>
    </changeSet>

    <changeSet id="009-3-make-fullname-not-null" author="minhtb">
        <addNotNullConstraint
            tableName="users"
            columnName="fullname"
            columnDataType="varchar(100)"
            constraintName="nn_users_fullname"/>
    </changeSet>

</databaseChangeLog>